{
  "name": "ubc-farm",
  "version": "1.2.0",
  "main": "app/server/index.js",
  "directories": {
    "lib": "backend",
    "bin": "bin",
    "test": "test",
    "doc": "docs"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "test": "tape '@(lib|app)/**/*.@(test|spec).js'",
    "docs": "gulp docs",
    "assets": "gulp assets",
    "marko": "gulp marko-views",
    "node:lib": "./node_modules/.bin/babel lib -D -d dist/node/lib --plugins transform-es2015-modules-commonjs",
    "node:app": "./node_modules/.bin/babel app -D -d dist/node/app --plugins transform-es2015-modules-commonjs",
    "node": "npm run node:lib && npm run node:app",
    "browser:node_modules": "./node_modules/.bin/babel node_modules node_modules --only \"node_modules/@(react?(-dom)|jsts)/dist/@(react?(-dom)|jsts.min).js\" -d dist/browser/node_modules --no-babelrc",
    "browser:redux": "./node_modules/.bin/babel node_modules --only \"?(*-)redux?(-*)/lib/**/*.js\" -d dist/browser/node_modules",
    "browser:lib": "./node_modules/.bin/babel lib -D -d dist/browser/lib --plugins transform-es2015-modules-systemjs",
    "browser:app": "./node_modules/.bin/babel app -D -d dist/browser/app --plugins transform-es2015-modules-systemjs",
    "postbrowser": "npm run browser:redux && npm run browser:node_modules",
    "browser": "npm run browser:lib && npm run browser:app",
    "fullstack": "npm run node && npm run browser"
  },
  "author": "Tiger Oakes <tigeroakes@gmail.com> (http://tigeroakes.com)",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.1",
    "glob": "^7.0.5",
    "hapi": "^13.4.1",
    "hapi-react-views": "^9.0.0",
    "inert": "^4.0.0",
    "jsts": "^1.1.2",
    "knex": "^0.11.7",
    "marko": "^3.5.0",
    "objection": "^0.5.1",
    "pg": "^5.2.0",
    "pg-query-stream": "^1.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "redux-form": "^5.2.5",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.10.3",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.9.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-plugin-transform-strict-mode": "^6.8.0",
    "blue-tape": "^0.2.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-imagemin": "^3.0.1",
    "gulp-jsdoc-to-markdown": "^1.2.2",
    "gulp-postcss": "^6.1.1",
    "gulp-rename": "^1.2.2",
    "gulp-rev": "^7.0.0",
    "postcss": "^5.0.21",
    "postcss-css-variables": "^0.5.1",
    "postcss-import": "^8.1.2"
  },
  "babel": {
    "plugins": [
      "transform-react-jsx",
      "transform-strict-mode",
      "transform-es2015-modules-commonjs"
    ],
    "sourceMaps": true,
    "only": [
			"lib/**", "app/**",
			"!lib/@(postgres*|folder)/**",
			"!app/@(server|models|api-handler)/**",
			"node_modules/?(*-)redux?(-*)/src/**"
		]
  }
}
