{
  "name": "ubc-farm",
  "version": "1.2.0",
  "main": "app/server/index.js",
  "directories": {
    "lib": "backend",
    "bin": "bin",
    "test": "test",
    "doc": "docs"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "test": "tape dist/node/lib/**/*.spec.js",
    "posttest": "tape dist/node/app/**/*.spec.js",
    "watch": "npm-watch",
    "assets": "gulp assets",
    "marko": "gulp marko-views",
    "css": "copyfiles -u 1 styles/**/*.css dist/browser/css",
    "node:lib": "babel lib -s -D -d dist/node/lib --plugins transform-es2015-modules-commonjs",
    "node:app": "babel app -s -D -d dist/node/app --plugins transform-es2015-modules-commonjs",
    "node": "npm run node:lib && npm run node:app",
    "browser:node_modules": "copyfiles \"node_modules/@(react?(-dom)|jsts)/dist/@(react?(-dom)|jsts.min).js\" dist/browser",
    "browser:router-reselect": "babel node_modules --only \"@(react-router|reselect)/lib/**/*.js\" -d dist/browser/node_modules",
    "browser:redux": "babel node_modules --only \"?(*-)redux?(-*)/lib/**/*.js\" -d dist/browser/node_modules",
    "browser:lib": "babel lib -s -D -d dist/browser/lib --plugins transform-es2015-modules-systemjs",
    "browser:app": "babel app -s -D -d dist/browser/app --plugins transform-es2015-modules-systemjs --ignore app/vendor/** app/system-config.js",
    "browser:vendor": "copyfiles app/vendor/** app/system-config.js dist/browser",
    "postbrowser": "npm run browser:vendor && npm run browser:redux && npm run browser:node_modules && npm run browser:router-reselect",
    "browser": "npm run browser:lib && npm run browser:app",
    "fullstack": "npm run node && npm run browser",
    "docs:api-handler": "rollup -i lib/api-handler/index.js --intro \"/** @module lib/api-handler */\" | jsdoc2md > docs/lib/api-handler.md",
    "docs:autogrid": "rollup -i lib/autogrid/index.js --intro \"/** @module lib/autogrid */\" | jsdoc2md > docs/lib/autogrid.md",
    "docs:calendar": "rollup -i lib/calendar/index.js --intro \"/** @module lib/calendar */\" | jsdoc2md > docs/lib/calendar.md",
    "docs:folder": "rollup -i lib/folder/index.js --intro \"/** @module lib/folder */\" | jsdoc2md > docs/lib/folder.md",
    "docs:geojson": "rollup -i lib/geojson/index.js --intro \"/** @module lib/geojson */\" | jsdoc2md > docs/lib/geojson.md",
    "docs:angle": "rollup -i lib/geometry/angle.js --intro \"/** @module lib/geometry/angle */\" | jsdoc2md > docs/lib/angle.md",
    "docs:module-worker": "rollup -i lib/module-worker/index.js --intro \"/** @module lib/module-worker */\" | jsdoc2md > docs/lib/module-worker.md",
    "docs:money": "rollup -i lib/money/index.js --intro \"/** @module lib/money */\" | jsdoc2md > docs/lib/money.md",
    "docs:network": "rollup -i lib/network/index.js --intro \"/** @module lib/network */\" | jsdoc2md > docs/lib/network.md",
    "docs:postgres-types": "rollup -i lib/postgres-types/index.js --intro \"/** @module lib/postgres-types */\" | jsdoc2md > docs/lib/postgres-types.md",
    "docs:react-table": "rollup -i lib/react-table/index.js --intro \"/** @module lib/react-table */\" | jsdoc2md > docs/lib/react-table.md",
    "docs:utils": "rollup -i lib/utils/index.js --intro \"/** @module lib/utils */\" | jsdoc2md > docs/lib/utils.md",
    "docs": "npm run docs:api-handler && npm run docs:autogrid && npm run docs:calendar && npm run docs:folder && npm run docs:geojson && npm run docs:angle && npm run docs:module-worker && npm run docs:money && npm run docs:network && npm run docs:postgres-types && npm run docs:react-table && npm run docs:utils",
    "knex": "knex migrate:latest"
  },
  "watch": {
    "node:lib": {
      "patterns": [
        "lib"
      ],
      "ignore": "*.spec.js"
    },
    "node:app": {
      "patterns": [
        "app"
      ],
      "ignore": "*.spec.js"
    }
  },
  "author": "Tiger Oakes <tigeroakes@gmail.com> (http://tigeroakes.com)",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.1",
    "glob": "^7.0.5",
    "hapi": "^13.4.1",
    "hapi-react-views": "^9.0.0",
    "inert": "^4.0.0",
    "jsts": "^1.1.2",
    "knex": "^0.11.7",
    "marko": "^3.5.0",
    "objection": "^0.5.1",
    "pg": "^5.2.0",
    "pg-query-stream": "^1.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.2",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-form": "^5.2.5",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.3",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.10.3",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.9.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-plugin-transform-strict-mode": "^6.8.0",
    "enzyme": "^2.3.0",
    "eslint": "^3.0.1",
    "eslint-plugin-react": "^5.2.2",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-imagemin": "^3.0.1",
    "gulp-jsdoc-to-markdown": "^1.2.2",
    "gulp-postcss": "^6.1.1",
    "gulp-rename": "^1.2.2",
    "gulp-rev": "^7.0.0",
    "npm-watch": "^0.1.4",
    "postcss": "^5.0.21",
    "postcss-css-variables": "^0.5.1",
    "postcss-import": "^8.1.2",
    "react-addons-test-utils": "^15.2.1",
    "sqlite3": "^3.1.4",
    "tape": "^4.6.0",
    "rollup": "^0.34.1"
  },
  "babel": {
    "plugins": [
      "transform-react-jsx"
    ],
    "sourceMaps": "both",
    "only": [
      "lib/**",
      "app/**",
      "!lib/@(postgres*|folder)/**",
      "!app/@(server|models|api-handler)/**",
      "node_modules/?(*-)redux?(-*)/src/**"
    ]
  }
}
