{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "cmd",
	"args": ["/C"],
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "start",
			"args": ["cd ${workspaceRoot} && start npm run start"]
		},
		{
			"taskName": "build",
			"args": ["cd ${fileDirname} && npm run prepublish"],
			"isBuildCommand": true
		},
		{
			"taskName": "test",
			"args": ["cd ${workspaceRoot} && rollup -c ./rollup.test.config.js -i ${file} --environment NO_OUTPUT -f cjs | node"],
			"isTestCommand": true
		}
	]
}