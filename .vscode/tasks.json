{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install",
			"suppressTaskName": false
		},
		{
			"taskName": "update",
			"suppressTaskName": false
		},
		{
			"taskName": "start",
			"suppressTaskName": false
		},
		{
			"taskName": "test",
			"suppressTaskName": false,
			"isTestCommand": true
		},
		{
			"taskName": "compile",
			"args": ["run", "compile"]
		},
		{
			"taskName": "build",
			"args": ["run", "build"]
		},
		{
			"taskName": "build-fullstack",
			"args": ["run", "fullstack"],
			"isBuildCommand": true
		},
		{
			"taskName": "docs",
			"args": ["run", "docs"]
		},
		{
			"taskName": "assets",
			"args": ["run", "assets"]
		},
		{
			"taskName": "marko",
			"args": ["run", "marko"]
		}
	]
}